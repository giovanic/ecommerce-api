#!/usr/bin/env bash
# Setup script for E-commerce Backend

set -e

echo "ğŸš€ Starting E-commerce Backend Setup..."
echo ""

# Check Ruby version
echo "ğŸ“¦ Checking Ruby version..."
ruby -v

# Check if bundler is installed
if ! command -v bundle &> /dev/null; then
    echo "âŒ Bundler not found. Installing..."
    gem install bundler
fi

# Install dependencies
echo "ğŸ“¦ Installing dependencies..."
bundle install

# Check if .env exists
if [ ! -f .env ]; then
    echo "ğŸ“ Creating .env file from example..."
    cp .env.example .env
    echo "âš ï¸  Please edit .env file with your credentials"
fi

# Setup database
echo "ğŸ—„ï¸  Setting up database..."
bundle exec rails db:create
bundle exec rails db:migrate

# Seed database
read -p "Do you want to seed the database with sample data? (y/n) " -n 1 -r
echo ""
if [[ $REPLY =~ ^[Yy]$ ]]; then
    echo "ğŸŒ± Seeding database..."
    bundle exec rails db:seed
fi

# Clear cache
echo "ğŸ§¹ Clearing cache..."
bundle exec rails tmp:clear

echo ""
echo "âœ… Setup completed successfully!"
echo ""
echo "ğŸ“‹ Next steps:"
echo "  1. Edit .env file with your credentials"
echo "  2. Configure Rails credentials: EDITOR='code --wait' rails credentials:edit"
echo "  3. Start the server: rails server"
echo ""
echo "ğŸŒ API will be available at: http://localhost:3000"
echo "ğŸ“š Documentation: README_API.md"
echo ""
